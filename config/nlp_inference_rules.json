{
  "_version": "1.0",
  "_descripcion": "Reglas de inferencia cuando LLM no extrae el campo",
  "_fecha": "2025-12-14",

  "modalidad": {
    "_gap_actual": "16% ofertas sin modalidad detectada",
    "_objetivo": ">95% cobertura",

    "reglas": [
      {
        "prioridad": 1,
        "contiene_cualquiera": ["100% remoto", "full remoto", "trabajo remoto", "remote work", "teletrabajo"],
        "resultado": "remoto"
      },
      {
        "prioridad": 2,
        "contiene_cualquiera": ["home office", "desde casa", "desde tu casa"],
        "resultado": "remoto"
      },
      {
        "prioridad": 3,
        "contiene_cualquiera": ["hibrido", "hibrida", "semi presencial", "semipresencial", "dias presenciales", "dias en oficina"],
        "resultado": "hibrido"
      },
      {
        "prioridad": 4,
        "contiene_cualquiera": ["presencial", "en oficina", "en planta", "en sucursal"],
        "resultado": "presencial"
      },
      {
        "prioridad": 5,
        "_descripcion": "Indicadores implicitos de presencialidad",
        "contiene_cualquiera": [
          "comedor en planta",
          "taller",
          "deposito",
          "almacen",
          "fabrica",
          "obra",
          "local comercial",
          "atencion al publico",
          "recepcion",
          "mostrador"
        ],
        "resultado": "presencial"
      }
    ],
    "default": "presencial",
    "nota_default": "Si no hay indicadores de remoto/hibrido, asumir presencial"
  },

  "nivel_seniority": {
    "_gap_actual": "12% ofertas sin seniority",
    "_objetivo": ">95% cobertura",

    "reglas": [
      {
        "prioridad": 1,
        "contiene_cualquiera": ["trainee", "pasante", "pasantia", "primer empleo", "sin experiencia", "recien egresado", "recien graduado"],
        "resultado": "trainee"
      },
      {
        "prioridad": 2,
        "contiene_cualquiera": ["junior", "jr", "jr.", "hasta 1 ano", "hasta 2 anos"],
        "resultado": "junior"
      },
      {
        "prioridad": 3,
        "contiene_cualquiera": ["semi senior", "semi-senior", "semisenior", "ssr", "2 a 4 anos", "3 anos de experiencia", "experiencia comprobable"],
        "resultado": "semisenior"
      },
      {
        "prioridad": 4,
        "contiene_cualquiera": ["senior", "sr", "sr.", "amplia experiencia", "5 anos", "mas de 5 anos", "solida experiencia"],
        "resultado": "senior"
      },
      {
        "prioridad": 5,
        "contiene_cualquiera": ["gerente", "manager", "director", "jefe de", "a cargo de equipo", "lider de", "responsable de area", "coordinador"],
        "resultado": "manager"
      }
    ],

    "inferencia_por_experiencia": {
      "_descripcion": "Si no hay keywords, inferir de experiencia_min_anios",
      "rangos": [
        {"exp_min": 0, "exp_max": 0, "resultado": "trainee"},
        {"exp_min": 1, "exp_max": 1, "resultado": "junior"},
        {"exp_min": 2, "exp_max": 4, "resultado": "semisenior"},
        {"exp_min": 5, "exp_max": 99, "resultado": "senior"}
      ]
    },

    "default": null,
    "nota_default": "No inferir seniority si no hay suficiente informacion"
  },

  "area_funcional": {
    "_gap_actual": "4% ofertas sin area funcional",
    "_objetivo": ">98% cobertura",

    "diccionario_keywords": {
      "Ventas/Comercial": ["vendedor", "ventas", "comercial", "ejecutivo de cuentas", "asesor comercial", "key account"],
      "IT/Sistemas": ["desarrollador", "programador", "developer", "devops", "frontend", "backend", "fullstack", "sistemas", "soporte tecnico", "help desk", "infraestructura"],
      "Administracion": ["administrativo", "administracion", "facturacion", "cuentas a pagar", "tesoreria", "secretaria"],
      "Recursos Humanos": ["rrhh", "recursos humanos", "seleccion", "reclutamiento", "capacitacion", "nominas", "payroll"],
      "Finanzas/Contabilidad": ["contador", "contable", "finanzas", "analista financiero", "auditoria", "impuestos"],
      "Marketing": ["marketing", "publicidad", "community manager", "social media", "branding", "comunicacion"],
      "Logistica/Operaciones": ["logistica", "operaciones", "supply chain", "deposito", "almacen", "distribucion", "transporte"],
      "Produccion/Manufactura": ["produccion", "manufactura", "planta", "operario", "maquinista", "mantenimiento"],
      "Atencion al Cliente": ["atencion al cliente", "customer service", "call center", "soporte", "reclamos"],
      "Ingenieria": ["ingeniero", "ingenieria", "proyecto", "calidad", "procesos"]
    },

    "default": null,
    "nota_default": "No inferir area si no hay keywords claros"
  },

  "tipo_contrato": {
    "reglas": [
      {
        "contiene_cualquiera": ["efectivo", "planta permanente", "relacion de dependencia", "tiempo indeterminado"],
        "resultado": "efectivo"
      },
      {
        "contiene_cualquiera": ["contrato", "plazo fijo", "temporal", "a termino"],
        "resultado": "contrato"
      },
      {
        "contiene_cualquiera": ["monotributo", "factura", "freelance", "autonomo"],
        "resultado": "monotributo"
      },
      {
        "contiene_cualquiera": ["pasantia", "beca"],
        "resultado": "pasantia"
      }
    ],
    "default": null
  }
}
