  "codigos_referencia": {
    "_descripcion": "Patrones de codigos internos a eliminar (inicio o fin del titulo)",
    "patrones": [
      {"patron": "\\(req\\d+\\)", "ejemplo": "(req199380)"},
      {"patron": "\\[REF[^\\]]+\\]", "ejemplo": "[REF-123]"},
      {"patron": "#\\d{4,}", "ejemplo": "#12345"},
      {"patron": "^\\d{3,4}[A-Z]{2}\\s+", "ejemplo": "1304CC ..."},
      {"patron": "^\\d{3,4}[A-Z]{2}/", "ejemplo": "1289CC/..."}
    ]
  },

  "modalidad_final": {
    "_descripcion": "Palabras de modalidad al final del titulo",
    "palabras": ["Eventual", "Part-time", "Part time", "Full-time", "Full time", "FULL",
                 "Remoto", "Hibrido", "Hibrida", "Presencial", "PRESENCIAL", "Temporal", "Freelance"]
  },

  "zonas_ubicaciones": {
    "_descripcion": "Patrones de ubicacion al final",
    "patrones": [
      {"patron": "\\s*[Zz]/[\\w]+$", "ejemplo": "Z/Escobar"},
      {"patron": "\\s*[Zz]ona\\s+[\\w/]+$", "ejemplo": "zona CABA"},
      {"patron": "\\s*/\\s*(CABA|GBA|BA)$", "ejemplo": "/ CABA"},
      {"patron": "\\s*-\\s*(BA|CABA|GBA|Bs\\.?\\s*As\\.?|Buenos\\s+Aires|Capital|Cordoba|Mendoza|Rosario|Santa\\s+Fe)$", "ejemplo": "- Buenos Aires"},
      {"patron": "\\s*-\\s*[\\w\\s]+\\s*-\\s*(BA|GBA|CABA)$", "ejemplo": "- Roque Perez - BA"},
      {"patron": "\\s+Zona\\s+(Norte|Sur|Oeste|Este|Caba|CABA)$", "ejemplo": "Zona Norte"},
      {"patron": "\\s*-?\\s*Zona\\s+San\\s+Mart[ií]n\\.?$", "ejemplo": "- Zona San Martín."},
      {"patron": "\\s+en\\s+(Zarate|Pilar|Escobar|Tigre|CABA|Cordoba|Rosario|Mendoza)$", "ejemplo": "en Zarate"},
      {"patron": "\\s*-\\s*[\\w\\s]+,?\\s*(Gba|GBA)$", "ejemplo": "- Florencio Varela, Gba"},
      {"patron": "\\s*-\\s*[\\w\\s]+\\s+(Gba|GBA)\\.?$", "ejemplo": "- San Martín GBA"}
    ]
  },

