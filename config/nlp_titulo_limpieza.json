  "sufijos_empresariales": {
    "_descripcion": "Patrones de sufijos empresariales completos a eliminar",
    "patrones": [
      {"patron": "\\s*-\\s*[Ii]mportante\\s+.+$", "ejemplo": "- Importante Cadena de Restaurantes"},
      {"patron": "\\s*-\\s*[Rr]econocid[ao]\\s+.+$", "ejemplo": "- Reconocida Cadena de Heladerías"},
      {"patron": "\\s*-\\s*[Pp]ara\\s+.+$", "ejemplo": "- Para empresa líder"},
      {"patron": "\\s*-\\s*[Ee]n\\s+[Pp]araguay$", "ejemplo": "- en Paraguay"},
      {"patron": "\\s+[Aa]sunci[oó]n\\s+[Pp]araguay$", "ejemplo": "Asuncion Paraguay"},
      {"patron": "\\s+[Pp]araguay$", "ejemplo": "Paraguay"},
      {"patron": "\\s*-\\s*copia$", "ejemplo": "- copia"}
    ]
  },

  "parentesis_eliminar": {
    "_descripcion": "Patrones de parentesis a eliminar",
    "patrones": [
      {"patron": "\\s*\\([^)]{15,}\\)$", "ejemplo": "(Consumo Masivo / Grandes Cuentas)", "razon": "parentesis largo al final"},
      {"patron": "\\s*\\(PYME\\)$", "ejemplo": "(PYME)"},
      {"patron": "\\s*\\(para\\s+[^)]+\\)$", "ejemplo": "(para cliente bancario)"},
      {"patron": "\\s*\\(Eventual\\)$", "ejemplo": "(Eventual)"},
      {"patron": "\\s*\\(Corredor\\)$", "ejemplo": "(Corredor)"},
      {"patron": "\\s*\\(Externo/?a?\\)$", "ejemplo": "(Externo/a)"},
      {"patron": "\\s*\\(Temporal\\)$", "ejemplo": "(Temporal)"},
      {"patron": "\\s*\\(Reemplazo\\)$", "ejemplo": "(Reemplazo)"},
      {"patron": "\\s*\\(Part[- ]?time\\)$", "ejemplo": "(Part time)"},
      {"patron": "\\s*\\(Full[- ]?time\\)$", "ejemplo": "(Full time)"},
      {"patron": "\\s*\\(Nordelta\\)$", "ejemplo": "(Nordelta)"},
      {"patron": "\\s*\\([A-Z]{2,}\\s+[A-Z]+\\)$", "ejemplo": "(SAN MIGUEL)"},
      {"patron": "\\s*\\([Ss]ucursal\\s+[^)]+\\)$", "ejemplo": "(Sucursal PILAR)"},
      {"patron": "\\s*\\([Pp]or\\s+[Tt]emporada\\)$", "ejemplo": "(Por Temporada)"},
      {"patron": "\\s*\\([A-Z][a-z]+\\)$", "ejemplo": "(Nordelta)", "razon": "localidad en parentesis"},
      {"patron": "\\s*\\(San\\s+Mart[ií]n\\)$", "ejemplo": "(San Martín)"},
      {"patron": "\\s*\\([A-Z][a-z]+\\s+[A-Z][a-z]+\\)$", "ejemplo": "(Villa Martelli)", "razon": "localidad 2 palabras"}
    ]
  },

  "limpieza_final": {
    "_descripcion": "Patrones de limpieza al final del proceso",
    "patrones": [
      {"patron": "\\s+", "reemplazo": " ", "descripcion": "espacios multiples"},
      {"patron": "[\\s\\-–—/]+$", "reemplazo": "", "descripcion": "guiones/barras sueltos al final (incluye em-dash)"}
