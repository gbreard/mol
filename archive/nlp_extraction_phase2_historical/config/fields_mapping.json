{
  "version": "1.0.0",
  "description": "Schema de campos extraídos por NLP de descripciones de ofertas laborales",
  "last_updated": "2025-10-25",

  "campos_nlp": {
    "experiencia": {
      "fields": {
        "experiencia_min_anios": {
          "type": "int",
          "nullable": true,
          "description": "Años mínimos de experiencia requeridos",
          "example": 3
        },
        "experiencia_max_anios": {
          "type": "int",
          "nullable": true,
          "description": "Años máximos de experiencia (rango superior)",
          "example": 5
        },
        "experiencia_area": {
          "type": "string",
          "nullable": true,
          "description": "Área o sector de experiencia requerida",
          "example": "desarrollo de software"
        }
      }
    },

    "educacion": {
      "fields": {
        "nivel_educativo": {
          "type": "string",
          "nullable": true,
          "description": "Nivel educativo requerido",
          "enum": ["secundario", "terciario", "universitario", "posgrado"],
          "example": "universitario"
        },
        "estado_educativo": {
          "type": "string",
          "nullable": true,
          "description": "Estado del nivel educativo",
          "enum": ["completo", "en_curso", "incompleto"],
          "example": "completo"
        },
        "carrera_especifica": {
          "type": "string",
          "nullable": true,
          "description": "Carrera o título específico mencionado",
          "example": "Ingeniería en Sistemas"
        },
        "titulo_excluyente": {
          "type": "boolean",
          "nullable": true,
          "description": "Si el título es excluyente",
          "example": true
        }
      }
    },

    "idiomas": {
      "fields": {
        "idioma_principal": {
          "type": "string",
          "nullable": true,
          "description": "Idioma principal requerido (además de español)",
          "example": "ingles"
        },
        "nivel_idioma_principal": {
          "type": "string",
          "nullable": true,
          "description": "Nivel del idioma principal",
          "enum": ["basico", "intermedio", "avanzado", "nativo", "bilingue"],
          "example": "intermedio"
        },
        "idioma_secundario": {
          "type": "string",
          "nullable": true,
          "description": "Segundo idioma requerido",
          "example": "portugues"
        },
        "nivel_idioma_secundario": {
          "type": "string",
          "nullable": true,
          "description": "Nivel del idioma secundario",
          "enum": ["basico", "intermedio", "avanzado", "nativo", "bilingue"],
          "example": "basico"
        }
      }
    },

    "skills": {
      "fields": {
        "skills_tecnicas_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Lista de habilidades técnicas/herramientas requeridas",
          "example": ["Python", "Django", "PostgreSQL", "Git"]
        },
        "niveles_skills_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Niveles correspondientes a cada skill técnica (mismo orden)",
          "example": ["avanzado", "intermedio", "basico", "intermedio"]
        },
        "soft_skills_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Lista de habilidades blandas mencionadas",
          "example": ["trabajo en equipo", "comunicacion efectiva", "proactividad"]
        },
        "certificaciones_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Certificaciones o acreditaciones mencionadas",
          "example": ["AWS Certified", "PMP", "Scrum Master"]
        }
      }
    },

    "compensacion": {
      "fields": {
        "salario_min": {
          "type": "float",
          "nullable": true,
          "description": "Salario mínimo ofrecido (rango inferior)",
          "example": 150000.0
        },
        "salario_max": {
          "type": "float",
          "nullable": true,
          "description": "Salario máximo ofrecido (rango superior)",
          "example": 200000.0
        },
        "moneda": {
          "type": "string",
          "nullable": true,
          "description": "Moneda del salario",
          "enum": ["ARS", "USD", "EUR", "BRL"],
          "example": "ARS"
        },
        "beneficios_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Lista de beneficios mencionados",
          "example": ["obra social", "vacaciones extendidas", "trabajo remoto", "capacitaciones"]
        }
      }
    },

    "requisitos": {
      "fields": {
        "requisitos_excluyentes_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Lista de requisitos excluyentes explícitos",
          "example": ["título universitario", "disponibilidad full-time"]
        },
        "requisitos_deseables_list": {
          "type": "array",
          "items": "string",
          "nullable": true,
          "description": "Lista de requisitos deseables (no excluyentes)",
          "example": ["conocimientos en cloud", "experiencia en startups"]
        }
      }
    },

    "jornada": {
      "fields": {
        "jornada_laboral": {
          "type": "string",
          "nullable": true,
          "description": "Tipo de jornada laboral",
          "enum": ["full_time", "part_time", "por_proyecto", "freelance", "temporal", "pasantia"],
          "example": "full_time"
        },
        "horario_flexible": {
          "type": "boolean",
          "nullable": true,
          "description": "Si se menciona horario flexible",
          "example": true
        }
      }
    },

    "metadata": {
      "fields": {
        "nlp_extraction_timestamp": {
          "type": "string",
          "format": "ISO8601",
          "nullable": false,
          "description": "Timestamp de cuando se realizó la extracción",
          "example": "2025-10-25T14:30:00"
        },
        "nlp_version": {
          "type": "string",
          "nullable": false,
          "description": "Versión del extractor utilizado",
          "example": "1.0.0"
        },
        "nlp_confidence_score": {
          "type": "float",
          "nullable": false,
          "description": "Score de confianza promedio de la extracción (0-1)",
          "example": 0.75
        }
      }
    }
  },

  "total_campos_nuevos": 23,

